import RPi.GPIO as GPIO
import time
import rec_ser_img

GPIO.setmode(GPIO.BCM)

GPIO.setup(22, GPIO.IN)  #PIR Sensor

try:
    time.sleep(2)  # Stabilze sensor
    while True:
        if GPIO.input(22):
            print ('Starting facial recognition program')
            time.sleep(1)
            rec_ser_img

except:
    GPIO.cleanup()
